extends layout.pug
block content
  - const createReducer = (name) => (prev, curr) => (curr.path === name ? 'is-invalid' : '');
  #custom-form-width.card
    h3.p-3.text-center.m-0 Sign Up
    form.p-3.needs-validation(
      method='POST',
      action='/auth/sign-up',
      novalidate
    )
      .mb-3
        input#username.form-control(
          type='text',
          placeholder='User Name',
          name='username',
          required
        )
        .invalid-feedback Username is required
      .mb-3
        input#email.form-control(
          type='email',
          placeholder='Email',
          name='email',
          required
        )
        .invalid-feedback Please enter a valid email
      .mb-3
        input#password.form-control(
          type='password',
          placeholder='Password',
          name='password',
          aria-describedby='password-feedback',
          required
        )
        #password-feedback.invalid-feedback Password must contain at least 8 character, one lowercase letter, one uppercase letter, one number, and one special character
      .mb-3
        input#confirmPassword.form-control(
          type='password',
          placeholder='Confirm Password',
          name='confirmPassword',
          required,
          aria-describedby='confirmPassword-feedback'
        )
        #confirmPassword-feedback.invalid-feedback Passwords does not match
      .mb-3
        button.btn.btn-dark.w-100(type=submit) Sign up
